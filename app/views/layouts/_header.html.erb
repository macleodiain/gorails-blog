<div class="flex items-center justify-between mx-[150px] mt-[20px]">
    <div>
        <p><%= link_to "Home", root_path %></p>
        <% if user_signed_in? %>
            <p><%= link_to "New Post", new_blog_post_path %>
        <% end %>
    </div>
    <div>
        <% unless user_signed_in?%>
